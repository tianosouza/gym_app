<div class="flex flex-col max-w-lg mx-auto my-10 bg-white p-8 rounded-xl shadow shadow-slate-300">

  <h2 class="text-3xl font-medium">Log in</h2>
  <p class="text-slate-500">Hi, Welcome back ðŸ‘‹</p>

  <div class="my-6">
    <button class="w-full text-center py-3 my-3 border flex space-x-2 items-center justify-center rounded-lg text-slate-700 hover:border-slate-400 hover:text-slate-900 hover:shadow transition duration-150">
      <img src="https://www.svgrepo.com/show/355037/google.svg" style="width: 24px" alt=""> <span>Login with Google</span>
    </button>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "bg-white shadow-md rounded pt-6") do |f| %>
    <div class="field mb-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-1 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder:"Email" %>
    </div>
  
    <div class="field mb-2">
      <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-1 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder:"Password" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <div class="flex flex-col justify-center items-center gap-2 mt-6">
      <%= f.submit "Log in", class: "py-2 px-6 w-full bg-blue-700 rounded-full text-slate-50 font-semibold hover:bg-blue-800 transition" %>
      <%= link_to "Sign up", new_registration_path(resource_name), class:"text-center py-2 px-6 w-full bg-blue-700 rounded-full text-slate-50 font-semibold hover:bg-blue-800 transition" %><br />
    </div>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-end font-medium text-indigo-600 mt-0" %><br />
  <% end %>
</div>
