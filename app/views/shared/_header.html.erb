<header class="bg-white shadow-md dark:bg-slate-900 text-slate-900 dark:text-slate-200" data-controller="header">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">Gym App</span>
        <%= image_tag 'logo.svg', id: "logo-dark", style: "heigth: 50px; width: 50px", alt: "Logo App" %>
        <%= image_tag 'logo-ligth.svg', id: "logo-light", style: "heigth: 50px; width: 50px", alt: "Logo App" %>
      </a>
    </div>
    <div class="flex lg:hidden">
      <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700" data-action="click->header#opemMenu">
        <span class="sr-only">Open main menu</span>
        <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <div class="relative">
      </div>
      <%= link_to "Home", root_path, class: "text-sm/6 font-semibold text-gray-900 dark:text-slate-200" %>
      <%= link_to "Exercises", "#", class: "text-sm/6 font-semibold text-gray-900 dark:text-slate-200" %>
      <%= link_to "Workouts", "#", class: "text-sm/6 font-semibold text-gray-900 dark:text-slate-200" %>
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end gap-2">
      <%= render "shared/toggle_theme" %>
      <% if user_signed_in? %>
        <%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "py-2 px-6 w-22 bg-blue-700 rounded-full text-slate-50 font-semibold hover:bg-blue-800 transition" %>
      <% else %>
        <%= link_to "Log in", new_user_session_path, class: "py-2 px-6 w-22 bg-blue-700 rounded-full text-slate-50 font-semibold hover:bg-blue-800 transition" %>
      <% end %>
    </div>
  </nav>
  
  <div role="dialog" aria-modal="true" data-header-target="menu">
    
    <div class="fixed inset-0 z-10"></div>
    <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between">
        <a href="#" class="-m-1.5 p-1.5">
          <span class="sr-only">Gym App</span>
          <%= image_tag 'logo.svg', style: "heigth: 50px; width: 50px", alt: "Logo App" %>
        </a>
        <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700" data-action="click->header#closeMenu">
          <span class="sr-only">Close menu</span>
          <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50">Home</a>
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50">Exercises</a>
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50">Workouts</a>
          </div>
          <div class="py-6">
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-gray-900 hover:bg-gray-50">Log in</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
