<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @exercise %>

    <%= link_to "Edit this exercise", edit_exercise_path(@exercise), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to exercises", exercises_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this exercise", @exercise, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
